<div class="container">

<h1 class="page-title">Current Projects</h1>

<% if @projects.current_projects == [] %>
  <p>No current projects.</p>
<% else %>
  <ul class="collection">
  <% @projects.current_projects.each do |project| %>
  <li class="collection-item avatar">
    <span class="title"><b>Project Name:</b> <%= link_to project.name, edit_admin_project_path(project) %></span>
    <p><b>Group:</b> <%= project.group_members %></p>
    <p><b>Mod:</b> <%= project.project_type %></p>
    <p><b>Finals:</b>
        <% if @project.final_confirmation %>
          <i class="material-icons finals-yes">done</i>
        <% else %>
          <i class="material-icons finals-no">not_interested</i>
        <% end %>
    </p>
  </li>
  <% end %>
  </ul>
<% end %>
</div>
