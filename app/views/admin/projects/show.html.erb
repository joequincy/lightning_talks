<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card grey darken-1">

        <div class="card-content white-text">
          <span class="card-title"><%= @project.name %></span>
          <p>Student Name: <%= @project.group_members %></p>
          <p>
          Able to present at finals:
          <% if @project.final_confirmation %>
            <i class="material-icons finals-yes">done</i>
          <% else %>
            <i class="material-icons finals-no">not_interested</i>
          <% end %>
          </p>
        </div>

        <% if @project.has_votes %>
          <div class="card-content white-text">
            <span class="card-title">Voting</span>
            <p>Presentation: <%= @project.average_presentation %></p>
            <p>Content: <%= @project.average_content %></p>
            <p>Surprise: <%= @project.average_surprise %></p>
            <p>Feedback:</p>
            <% @project.votes.each do |vote| %>
              <% if vote.feedback %>
                <p><%= vote.feedback %></p>
              <% else %>
                <p>No feedback provided.</p>
              <% end %>
            <% end %>
          </div>
        <% end %>


        <div class="card-action">
          <p><%= link_to "Edit #{@project.name}", edit_admin_project_path(@project), class: 'btn turing-btn waves-effect waves-light' %></p>
          <p><%= link_to "Other talks from this Lightning Talk", admin_lightning_talk_path(@project.lightning_talk), class: 'btn turing-btn waves-effect waves-light' %></p>
        </div>
      </div>
    </div>
  </div>
</div>
