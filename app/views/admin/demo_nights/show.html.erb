<h1><%= @demo_night.name %></h1>

<div class="admin-tools">
  <% if @demo_night.accepting_submissions? %>
    <%= link_to "Open voting!", admin_demo_night_path(@demo_night, demo_night: {status: :voting}), method: :patch %>
  <% elsif @demo_night.voting? %>
    <%= link_to "Close!", admin_demo_night_path(@demo_night, demo_night: {status: :closed}), method: :patch %>
  <% else %>
    <p>Closed</p>
  <% end %>
</div>

<div class="projects">
  <% if @demo_night.projects.count == 0 %>
    No Projects Yet!
  <% else %>
    <% @demo_night.projects.each do |project| %>
      <%= link_to project.name, admin_project_path(project) %><br>
    <% end %>
  <% end %>
</div>
