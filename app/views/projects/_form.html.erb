<%= form_for @project do |f| %>
<div class="input-field col s12">
  <%= f.text_field :name, class: "validate" %>
  <%= f.label "Topic" %>
</div>
<div class="input-field col s12">
  <%= f.text_field :group_members, class: "validate" %>
  <%= f.label "Student Name" %>
</div>
<div class="input-field col s12">
  <%= f.select(:project_type, @modules, {include_blank: "Please select a module"}, {class: "modules"}) %>
  <%= f.label :project_type %>
</div>
<div class="input-field col s12">
  <%= f.select(:week, @weeks, {include_blank: "Please select a week"}, {class: "weeks"}) %>
  <%= f.label "Which week are you scheduled for your talk?" %>
</div>
<div class="input-field col s12">
  <%= f.text_field :note %>
  <%= f.label "Submit a description of your talk here (required)." %>
</div>
<div class="input-field col s12">
  <p>Reminder: You should submit a new talk each inning.  Repeated talks will not fulfill your lightning talk requirement.</p>
  <%= f.submit "Submit", class: "btn turing-btn" %>
</div>
<% end %>
